<table>
  <tr>
    <th>Pic</th>
    <th>Inspiration</th>
    <th>Location on body</th>
    <th>Date started</th>
    <th>Date completed</th>
    <th>Hours Spent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tattoos.each do |tattoo| %>
  <tr>
    <td width="200px"><%=image_tag(tattoo.pic_url) if tattoo.pic.present?%></td>
    <td><%= tattoo.inspiration %></td>
    <td><%= tattoo.location_on_body %></td>
    <td><%= tattoo.date_started %></td>
    <td><%= tattoo.date_completed %></td>
    <td><%= tattoo.hours_spent %></td>
    <td><%= ilink_to 'eye-open','', tattoo %> | <%= ilink_to 'pencil','', edit_tattoo_path(tattoo) %> | <%= ilink_to 'trash','', tattoo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %> 
</table>

